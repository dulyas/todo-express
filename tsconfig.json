{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./dist",
		"noImplicitAny": true,
		"sourceMap": false,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": false,
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"ts-node": {
		"files": false,
		"transpileOnly": true,
		"typeCheck": false
	}
}
